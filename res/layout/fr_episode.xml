<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:clickable="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/episodeImageView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>

    <fr.free.gelmir.lerubanbleu.util.CustomHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:id="@+id/horizontalScrollView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:fillViewport="true">

        <fr.free.gelmir.lerubanbleu.util.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/episodeCustomImageView"
            android:visibility="invisible"
            android:background="#ABCDEF"
            android:scaleType="fitCenter"/>

    </fr.free.gelmir.lerubanbleu.util.CustomHorizontalScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watchImageView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/episodeNbTextView"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>